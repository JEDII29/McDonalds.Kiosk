<Window x:Class="McDonalds.Kiosk.App.Views.Idle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Idle" Height="450" Width="400">

    <Grid Background="Azure">
        <Button x:Name="idle" Width="200" Height="130" Content="Start" FontSize="50" BorderThickness="6" BorderBrush="Green" Background="DarkSeaGreen" Command="{Binding OpenSessionCommand}" Margin="0,200,0,0" />
    </Grid>
</Window>
